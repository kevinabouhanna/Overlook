  <!-- Hero Section -->
  <section
    class="min-h-screen flex items-center pt-24 relative overflow-hidden"
  >
    <div class="absolute inset-0 z-0">
      <ResponsiveImage
        src={heroImage}
        alt="Modern office space with natural light"
        class="w-full h-full object-cover"
        widths={[400, 800, 1200, 2000]}
        sizes="100vw"
        width={2070}
        height={1380}
        loading="eager"
      />
      <div class="absolute inset-0 bg-white opacity-50"></div>
      <div class="absolute inset-0 bg-radial-gradient"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-8 hero-title text-black">
          <span class="inline-block">Build.</span>{" "}
          <span class="inline-block">Trust.</span>{" "}
          <span class="inline-block">Hire.</span>
        </h1>
        <p class="text-xl md:text-2xl mb-12 text-gray-700">
          We help businesses build trust in sales and hire the right people with
