---
import MainLayout from '../layouts/MainLayout.astro';
import { servicesData } from '../data/services.js';
import OptimizedImage from '../components/common/OptimizedImage.astro';

// Use the imported services data
const services = servicesData;
---

<MainLayout
  title="Overlook Services - Sales Consulting Solutions"
  description="Explore Overlook's comprehensive services for sales team development, including hiring, training, process optimization, and performance metrics."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services</h1>
        <p class="text-xl text-gray-700 mb-8">
          Comprehensive solutions to help you build, train, and optimize your sales organization.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Overview Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {services.map((service, index) => (
          <div class="service-card animate-on-scroll" style={{ transitionDelay: `${index * 0.1}s` }}>
            <div class="service-card-overlay h-full">
              <OptimizedImage
                src={service.image}
                alt={service.title}
                class="absolute inset-0 w-full h-full object-cover"
                width={800}
                height={600}
                loading='eager'
              />
              <div class="gradient-overlay"></div>
              <div class="relative z-10 p-8 h-full flex flex-col">
                <h3 class="text-2xl font-bold mb-4 text-white">{service.title}</h3>
                <p class="text-gray-200 mb-6">{service.description}</p>
                <ul class="list-disc list-inside space-y-2 text-gray-200 mb-6">
                  {Array.isArray(service.features)
                    ? service.features.map(feature => (
                        <li>{typeof feature === 'object' ? feature.title : feature}</li>
                      ))
                    : null
                  }
                </ul>
                <div class="mt-auto">
                  <a
                    href={`/services/${service.id}`}
                    class="inline-block bg-white text-black px-6 py-2 rounded-md text-sm font-medium hover:bg-gray-100 transition-colors"
                  >
                    Learn More
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Approach Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Our Approach</h2>
        <p class="text-xl text-gray-700">
          We believe in a holistic approach to sales team development.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-md animate-on-scroll">
          <div class="w-12 h-12 bg-black text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">1</div>
          <h3 class="text-xl font-bold mb-4">Assess</h3>
          <p class="text-gray-700">
            We start by thoroughly assessing your current sales organization, processes, and performance.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md animate-on-scroll" style={{ transitionDelay: "0.1s" }}>
          <div class="w-12 h-12 bg-black text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">2</div>
          <h3 class="text-xl font-bold mb-4">Plan</h3>
          <p class="text-gray-700">
            Based on our assessment, we develop a customized plan to address your specific challenges and goals.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md animate-on-scroll" style={{ transitionDelay: "0.2s" }}>
          <div class="w-12 h-12 bg-black text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">3</div>
          <h3 class="text-xl font-bold mb-4">Implement</h3>
          <p class="text-gray-700">
            We work alongside your team to implement the plan, providing hands-on guidance and support.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md animate-on-scroll" style={{ transitionDelay: "0.3s" }}>
          <div class="w-12 h-12 bg-black text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">4</div>
          <h3 class="text-xl font-bold mb-4">Optimize</h3>
          <p class="text-gray-700">
            We continuously measure results and refine our approach to ensure ongoing improvement.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto bg-gray-50 p-12 rounded-lg shadow-sm">
        <div class="flex flex-col md:flex-row items-center">
          <div class="w-24 h-24 bg-gray-200 rounded-full mb-6 md:mb-0 md:mr-8"></div>
          <div>
            <blockquote class="text-xl text-gray-700 italic mb-4">
              "Overlook's comprehensive approach to sales team development has transformed our organization. Their expertise in hiring, training, and process optimization has led to a 45% increase in our sales within just eight months."
            </blockquote>
            <cite class="text-gray-900 font-semibold">â€” Robert Chen, CEO, TechGrowth Solutions</cite>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Transform Your Sales Organization?</h2>
        <p class="text-xl text-gray-700 mb-8">
          Let's discuss how our services can help you achieve your sales goals.
        </p>
        <a
          href="/contact"
          class="bg-black text-white px-6 py-3 rounded-md text-base font-medium hover:bg-gray-800 transition-colors inline-block"
        >
          Schedule a Consultation
        </a>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const animateOnScroll = document.querySelectorAll('.animate-on-scroll');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animated');
        }
      });
    }, { threshold: 0.1 });

    animateOnScroll.forEach(element => {
      observer.observe(element);
    });
  });
</script>
