---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout
  title="Page Not Found - Overlook"
  description="The page you are looking for could not be found."
>
  <meta name="robots" content="noindex, nofollow" slot="head" />
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-9xl font-bold text-black mb-8">404</h1>
        <h2 class="text-3xl font-bold mb-6">Page Not Found</h2>
        <p class="text-xl text-gray-700 mb-12">
          The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="bg-black text-white px-8 py-3 rounded-md text-lg font-medium hover:bg-gray-800 transition-colors"
          >
            Go Home
          </a>
          <a
            href="/contact"
            class="bg-white text-black border-2 border-black px-8 py-3 rounded-md text-lg font-medium hover:bg-gray-100 transition-colors"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
